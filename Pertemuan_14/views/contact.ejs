
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <a href="/contact/tambahkontak" class="btn btn-primary mt-3">tambah kontak</a>
            <br>
            <% if (msg.length !== 0) { %>
                <div class="alert alert-success" role="alert">
                  <%= msg %> 
                </div>
              <% } %>
            <h2>Contact list</h2>
            <% if (kontaks.length == 0) { %>
                <div class="alert alert-danger" role="alert">
                    data kosong
                  </div>
               <% } else { %>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col"> </th>
                            <th scope="col"> </th>
                            <th scope="col">Nama : </th>
                            <th scope="col">Email :</th>
                            <th scope="col">Action :</th>
                        </tr>
                    </thead>
                    <% let angka = 1 %> 
                    <form action="/hapuskontak" method="POST">
                    <% kontaks.forEach(kontak => { %>
                        <tr> 
                        <th scope="row"><input type="checkbox" id="hobby" name="checked" value="<%= kontak.nama %>"/></th>
                        <td><%= angka++ %></td>
                            <td><%= kontak.nama %></td>
                            <td><%= kontak.email %> </td>
                            <td><a href="/contact/<%= kontak.nama %>"><span class="badge rounded-pill bg-success">detail</span></a></td>
                        </tr>
                    </tbody>
                    <% }) %>
                    <tbody>
                </table>
                <% } %> 
            
                 <button type="submit" class="btn badge rounded-pill bg-danger" onclick="return confirm(`yakin ingin dihapus ?`)">
                     Delete
                    </button>
         </div>
    </div>
</div>