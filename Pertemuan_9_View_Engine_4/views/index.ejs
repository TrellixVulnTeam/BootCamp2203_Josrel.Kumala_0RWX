<%- include('layout/header') %> 
<%- include('layout/nav') %> 

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>Contact list</h2>
            <% if (cont.length == 0) { %>
                <div class="alert alert-danger" role="alert">
                    data kosong
                  </div>
               <% } else { %>
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nama : </th>
                            <th scope="col">Email :</th>
                        </tr>
                    </thead>
                    <% let angka = 1 %> 
                    <% cont.forEach(kontak => { %>
                        <tr>
                        <th scope="row"><%= angka++ %> </th>
                        <td><%= kontak.nama %></td>
                        <td><%= kontak.email %> </td>
                        </tr>
                    </tbody>
                    <% }) %>
                    <tbody>
                </table>
                <% } %> 
        </div>
    </div>
</div>
<%- include('layout/footer') %> 