<header>
    <%- include('../views/layout/nav') %> 
  </header>
  
  
  <div class="container">
      <div class="row">
          <div class="col">
              <br>

              <% for (var l = discuss.length, i = 0; i < l; i++) { %>
                <% element = discuss[i]%>
                <% if(element.judul_thread = element.judul_thread) {%>
                    <h1 class="mt-5 text-center"><%= element.judul_thread %></h1>
                   <h5 class="mt-2 text-center">dibuat oleh : <b><%= element.creator %></b></h5>
                   <h6 class=" text-center"><%= element.time %></h6>
                   <P><%= element.deskripsi_thread %></P>
                <% break %>
                <% } %>
            <% } %>
            
            <% discuss.forEach(bawah => { %>
                <div class="card">
                                 <div class="card-header">
                                    <%= bawah.email %>
                                 </div>
                                 <div class="card-body">
                                   <blockquote class="blockquote mb-0">
                                     <p><%= bawah.comment_discussion %></p>
                                     <footer class="blockquote-footer"><%= bawah.jam_comment %></footer>
                                   </blockquote>
                                 </div>
                               </div>
                               <form method="post" action="/thread_comment/<%= bawah.judul_thread %>">
            <% }) %>
                            <div class="form-floating mt-3">
                                <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px" name="comments"></textarea>
                                <label for="floatingTextarea2">Comments</label>
                            </div>
                            <br>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
           </div>
      </div>
    </div>